{
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"allOf": [
		{
			"$ref": "../description.json"
		},
		{
			"$ref": "../../project/experimentalGameplay/upcomingCreatorFeatures.json",
			"then": {
				"type": "object",
				"properties": {
					"aliases": {
						"type": "object",
						"patternProperties": {
							".*": {
								"$ref": "/data/packages/minecraftBedrock/schema/entity/dynamic/currentContext/propertyForAlias.json"
							}
						}
					},
					"properties": {
						"type": "object",
						"patternProperties": {
							".*": {
								"type": "object",
								"properties": {
									"values": {
										"anyOf": [
											{
												"type": "object",
												"properties": {
													"min": {
														"type": [
															"number",
															"integer"
														]
													},
													"max": {
														"type": [
															"number",
															"integer"
														]
													}
												}
											},
											{
												"type": "array",
												"items": {
													"anyOf": [
														{
															"type": "string"
														},
														{
															"type": "number"
														},
														{
															"type": "boolean"
														}
													]
												}
											}
										]
									},
									"default": {
										"anyOf": [
											{
												"type": "string"
											},
											{
												"type": "number"
											},
											{
												"type": "boolean"
											}
										]
									},
									"client_sync": {
										"type": "boolean"
									}
								}
							}
						}
					}
				}
			}
		}
	]
}
