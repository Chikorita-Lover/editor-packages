{
	"$schema": "http://json-schema.org/draft-07/schema",
	"additionalProperties": false,
	"description": "Defines the movement speed for the entity.",
	"type": "object",
	"title": "Movement",
	"properties": {
		"value": {
			"title": "Value",
			"anyOf": [
				{
					"type": "number"
				},
				{
					"type": "object",
					"properties": {
						"range_min": {
							"type": "number"
						},
						"range_max": {
							"type": "number"
						}
					}
				}
			]
		},
		"max": {
			"title": "Maximum",
			"type": "number"
		}
	}
}
