{
	"$schema": "http://json-schema.org/draft-07/schema",
    "title": "Particle Appearance Tinting",
	"additionalProperties": false,
	"type": "object",
	"properties": {
		"color": {
            "title": "Color",
			"description": "Interpolation based color.",
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"gradient": {
                    "title": "Gradient",
					"anyOf": [
						{
							"type": "number"
						},
						{
							"type": "array",
							"minItems": 2,
							"maxItems": 2,
							"items": {
								"type": "array",
								"minItems": 4,
								"maxItems": 4,
								"items": {
									"$ref": "../../../molang/embedded.json"
								}
							}
						},
						{
							"type": "object",
							"patternProperties": {
								"[0-9]*:?[0-9]*": {
									"type": "string"
								}
							}
						}
					]
				},
				"interpolant": {
                    "title": "Interpolant",
					"$ref": "../../../molang/embedded.json"
				}
			}
		}
	}
}
